{
    "manifest_version": 3,
    "name": "Hotelier Hub Companion",
    "version": "1.0",
    "description": "Distributed Rate Scraping Client for Hotelier Hub",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "https://www.makemytrip.com/*",
        "https://www.agoda.com/*",
        "https://ycs.agoda.com/*",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*",
        "https://api.gadget4me.in/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}